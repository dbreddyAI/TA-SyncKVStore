{
    "meta": {
        "name": "TA-SyncKVStore", 
        "restRoot": "TA_SyncKVStore", 
        "version": "1.0.0", 
        "displayName": "SyncKVStore", 
        "apiVersion": "3.0.0"
    }, 
    "pages": {
        "configuration": {
            "tabs": [
                {
                    "name": "account", 
                    "table": {
                        "actions": [
                            "edit", 
                            "delete", 
                            "clone"
                        ], 
                        "header": [
                            {
                                "label": "Account name", 
                                "field": "name"
                            }, 
                            {
                                "label": "Username", 
                                "field": "username"
                            }
                        ]
                    }, 
                    "entity": [
                        {
                            "type": "text", 
                            "label": "Account name", 
                            "validators": [
                                {
                                    "type": "string", 
                                    "errorMsg": "Length of ID should be between 1 and 50", 
                                    "minLength": 1, 
                                    "maxLength": 50
                                }, 
                                {
                                    "type": "regex", 
                                    "errorMsg": "Account name must start with a letter and followed by alphabetic letters, digits or underscores.", 
                                    "pattern": "^[a-zA-Z]\\w*$"
                                }
                            ], 
                            "field": "name", 
                            "help": "Enter a unique name for this account.", 
                            "required": true
                        }, 
                        {
                            "type": "text", 
                            "label": "Username", 
                            "validators": [
                                {
                                    "type": "string", 
                                    "errorMsg": "Length of username should be between 1 and 200", 
                                    "minLength": 1, 
                                    "maxLength": 200
                                }
                            ], 
                            "options": {
                                "placeholder": "Enter the username here"
                            }, 
                            "help": "Enter the username for this account.", 
                            "field": "username", 
                            "required": true
                        }, 
                        {
                            "type": "text", 
                            "label": "Password", 
                            "validators": [
                                {
                                    "type": "string", 
                                    "errorMsg": "Length of password should be between 1 and 8192", 
                                    "minLength": 1, 
                                    "maxLength": 8192
                                }
                            ], 
                            "encrypted": true, 
                            "help": "Enter the password for this account.", 
                            "field": "password", 
                            "required": true
                        }
                    ], 
                    "title": "Account"
                }, 
                {
                    "name": "logging", 
                    "entity": [
                        {
                            "type": "singleSelect", 
                            "label": "Log level", 
                            "options": {
                                "disableSearch": true, 
                                "autoCompleteFields": [
                                    {
                                        "value": "DEBUG", 
                                        "label": "DEBUG"
                                    }, 
                                    {
                                        "value": "INFO", 
                                        "label": "INFO"
                                    }, 
                                    {
                                        "value": "WARNING", 
                                        "label": "WARNING"
                                    }, 
                                    {
                                        "value": "ERROR", 
                                        "label": "ERROR"
                                    }, 
                                    {
                                        "value": "CRITICAL", 
                                        "label": "CRITICAL"
                                    }
                                ]
                            }, 
                            "defaultValue": "INFO", 
                            "field": "loglevel"
                        }
                    ], 
                    "title": "Logging"
                }
            ], 
            "title": "Configuration", 
            "description": "Set up your add-on"
        }, 
        "inputs": {
            "services": [
                {
                    "name": "kvstore_to_index", 
                    "entity": [
                        {
                            "type": "text", 
                            "label": "Name", 
                            "validators": [
                                {
                                    "type": "regex", 
                                    "errorMsg": "Input Name must start with a letter and followed by alphabetic letters, digits or underscores.", 
                                    "pattern": "^[a-zA-Z]\\w*$"
                                }, 
                                {
                                    "type": "string", 
                                    "errorMsg": "Length of input name should be between 1 and 100", 
                                    "minLength": 1, 
                                    "maxLength": 100
                                }
                            ], 
                            "field": "name", 
                            "help": "Enter a unique name for the data input", 
                            "required": true
                        }, 
                        {
                            "type": "text", 
                            "label": "Interval", 
                            "validators": [
                                {
                                    "type": "regex", 
                                    "errorMsg": "Interval must be an integer.", 
                                    "pattern": "^\\-[1-9]\\d*$|^\\d*$"
                                }
                            ], 
                            "field": "interval", 
                            "help": "Time interval of input in seconds.", 
                            "required": true
                        }, 
                        {
                            "type": "singleSelect", 
                            "label": "Index", 
                            "validators": [
                                {
                                    "type": "string", 
                                    "errorMsg": "Length of index name should be between 1 and 80.", 
                                    "minLength": 1, 
                                    "maxLength": 80
                                }
                            ], 
                            "defaultValue": "default", 
                            "options": {
                                "endpointUrl": "data/indexes", 
                                "blackList": "^_.*$", 
                                "createSearchChoice": true
                            }, 
                            "field": "index", 
                            "required": true
                        }, 
                        {
                            "type": "text", 
                            "label": "Splunk Server", 
                            "validators": [
                                {
                                    "type": "string", 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "minLength": 0, 
                                    "maxLength": 8192
                                }
                            ], 
                            "field": "u_splunk_server", 
                            "help": "The Remote Splunk Server with the source KVStore", 
                            "required": true
                        }, 
                        {
                            "type": "text", 
                            "label": "Source App", 
                            "validators": [
                                {
                                    "type": "string", 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "minLength": 0, 
                                    "maxLength": 8192
                                }
                            ], 
                            "field": "u_source_app", 
                            "help": "The remote app context with the source KVStore Collection", 
                            "required": true
                        }, 
                        {
                            "type": "text", 
                            "label": "Source Collection", 
                            "validators": [
                                {
                                    "type": "string", 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "minLength": 0, 
                                    "maxLength": 8192
                                }
                            ], 
                            "field": "u_source_collection", 
                            "help": "The remote source KVStore Collection Name", 
                            "required": true
                        }, 
                        {
                            "type": "singleSelect", 
                            "label": "Global Account", 
                            "options": {
                                "referenceName": "account"
                            }, 
                            "help": "The stored rest API credential valid on the remote Splunk Server with permissions to the source KVStore", 
                            "field": "global_account", 
                            "required": true
                        }
                    ], 
                    "title": "KVStore to Index"
                }, 
                {
                    "name": "kvstore_to_kvstore", 
                    "entity": [
                        {
                            "type": "text", 
                            "label": "Name", 
                            "validators": [
                                {
                                    "type": "regex", 
                                    "errorMsg": "Input Name must start with a letter and followed by alphabetic letters, digits or underscores.", 
                                    "pattern": "^[a-zA-Z]\\w*$"
                                }, 
                                {
                                    "type": "string", 
                                    "errorMsg": "Length of input name should be between 1 and 100", 
                                    "minLength": 1, 
                                    "maxLength": 100
                                }
                            ], 
                            "field": "name", 
                            "help": "Enter a unique name for the data input", 
                            "required": true
                        }, 
                        {
                            "type": "text", 
                            "label": "Interval", 
                            "validators": [
                                {
                                    "type": "regex", 
                                    "errorMsg": "Interval must be an integer.", 
                                    "pattern": "^\\-[1-9]\\d*$|^\\d*$"
                                }
                            ], 
                            "field": "interval", 
                            "help": "Time interval of input in seconds.", 
                            "required": true
                        }, 
                        {
                            "type": "singleSelect", 
                            "label": "Index", 
                            "validators": [
                                {
                                    "type": "string", 
                                    "errorMsg": "Length of index name should be between 1 and 80.", 
                                    "minLength": 1, 
                                    "maxLength": 80
                                }
                            ], 
                            "defaultValue": "default", 
                            "options": {
                                "endpointUrl": "data/indexes", 
                                "blackList": "^_.*$", 
                                "createSearchChoice": true
                            }, 
                            "field": "index", 
                            "required": true
                        }, 
                        {
                            "type": "text", 
                            "label": "Splunk Server", 
                            "validators": [
                                {
                                    "type": "string", 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "minLength": 0, 
                                    "maxLength": 8192
                                }
                            ], 
                            "field": "u_splunkserver", 
                            "help": "The Remote Splunk Server with the source KVStore", 
                            "required": true
                        }, 
                        {
                            "type": "text", 
                            "label": "Source App", 
                            "validators": [
                                {
                                    "type": "string", 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "minLength": 0, 
                                    "maxLength": 8192
                                }
                            ], 
                            "field": "u_srcapp", 
                            "help": "The remote app context with the source KVStore Collection", 
                            "required": true
                        }, 
                        {
                            "type": "text", 
                            "label": "Source Collection", 
                            "validators": [
                                {
                                    "type": "string", 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "minLength": 0, 
                                    "maxLength": 8192
                                }
                            ], 
                            "field": "u_srccollection", 
                            "help": "The remote source KVStore Collection Name", 
                            "required": true
                        }, 
                        {
                            "type": "singleSelect", 
                            "label": "Global Account", 
                            "options": {
                                "referenceName": "account"
                            }, 
                            "help": "The stored rest API credential valid on the remote Splunk Server with permissions to the source KVStore", 
                            "field": "global_account", 
                            "required": true
                        }, 
                        {
                            "type": "radio", 
                            "label": "Destination Table Action", 
                            "defaultValue": "replace", 
                            "field": "u_desttableaction", 
                            "help": "Choose to force destination table full replacement or update table.", 
                            "options": {
                                "items": [
                                    {
                                        "value": "replace", 
                                        "label": "Replace Table"
                                    }, 
                                    {
                                        "value": "update", 
                                        "label": "Update Table"
                                    }
                                ]
                            }, 
                            "required": true
                        }, 
                        {
                            "type": "text", 
                            "label": "Destination App", 
                            "validators": [
                                {
                                    "type": "string", 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "minLength": 0, 
                                    "maxLength": 8192
                                }
                            ], 
                            "field": "u_destapp", 
                            "help": "The local app context with the destination KVStore Collection", 
                            "required": true
                        }, 
                        {
                            "type": "text", 
                            "label": "Destination Collection", 
                            "validators": [
                                {
                                    "type": "string", 
                                    "errorMsg": "Max length of text input is 8192", 
                                    "minLength": 0, 
                                    "maxLength": 8192
                                }
                            ], 
                            "field": "u_destcollection", 
                            "help": "The local destination KVStore Collection Name", 
                            "required": true
                        }
                    ], 
                    "title": "KVStore to KVStore"
                }
            ], 
            "title": "Inputs", 
            "description": "Manage your data inputs", 
            "table": {
                "actions": [
                    "edit", 
                    "enable", 
